{
  "name": "gladius-contracts",
  "version": "1.0.0",
  "description": "[![Build Status](https://travis-ci.org/gladiusio/gladius-contracts.svg?branch=master)](https://travis-ci.org/gladiusio/gladius-contracts)",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "ethereumjs-abi": "^0.6.5",
    "truffle-hdwallet-provider": "0.0.5"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.3",
    "truffle": "^4.1.14"
  },
  "scripts": {
    "clean": "rm -rf build",
    "truffleCompile": "truffle compile",
    "truffleDevelop": "truffle develop",
    "truffleTestMarket": "truffle test './test/TestMarket.js' --network truffle",
    "truffleTestPool": "truffle test './test/TestPools.js' --network truffle",
    "truffleTestAll": "npm-run-all --sequential truffleTestMarket truffleTestPool",
    "truffleDeploy": "truffle deploy --network truffle",
    "test": "npm run clean; npm-run-all -p -r truffleDevelop truffleTestAll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gladiusio/gladius-contracts.git"
  },
